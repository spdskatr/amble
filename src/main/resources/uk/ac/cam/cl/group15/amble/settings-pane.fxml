<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="uk.ac.cam.cl.group15.amble.SettingsPaneController"
      prefHeight="400.0" prefWidth="600.0" alignment="TOP_CENTER">
    <padding>
        <Insets topRightBottomLeft="50"/>
    </padding>
    <Text text="Settings"/>
    <Button onAction="#onExitSettingsButtonPressed" text="Exit settings"/>

    <StackPane>
        <VBox>
            <HBox styleClass="settingsPanel">
                <Label text="Preferences" prefWidth="3000"/>
            </HBox>
            <Button styleClass="settingsPanel" onAction="#onConfigureTimePressed" text="Configure Recommended Time" prefWidth="3000"> </Button>
            <Button styleClass="settingsPanel" onAction="#onConfigurePacePressed" text="Configure Pace" prefWidth="3000"> </Button>
            <Button styleClass="settingsPanel" onAction="#onWeatherConfigPressed" text="Configure Weather Preferences" prefWidth="3000"> </Button>
        </VBox>

    </StackPane>
</VBox>
